<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="bookNumber">
		<field-validator type="required">
			<message>Book Number cannot be blank</message>
		</field-validator>
	</field>
	<field name="isbn">
		<field-validator type="requiredstring">
			<message>ISBN cannot be blank</message>
		</field-validator>
	</field>
	<field name="bookName">
		<field-validator type="requiredstring">
			<message>Book Name cannot be blank</message>
		</field-validator>
	</field>
	<field name="author">
		<field-validator type="requiredstring">
			<message>Author cannot be blank</message>
		</field-validator>
	</field>
	<field name="bookPress">
		<field-validator type="requiredstring">
			<message>Press cannot be blank</message>
		</field-validator>
	</field>
	<field name="language">
		<field-validator type="requiredstring">
			<message>Language cannot be blank</message>
		</field-validator>
	</field>
	<field name="price">
		<field-validator type="required">
			<message>Price cannot be blank</message>
		</field-validator>
	</field>
	<field name="pages">
		<field-validator type="required">
			<message>Pages cannot be blank</message>
		</field-validator>
	</field>
	<field name="bookDiscription">
		<field-validator type="requiredstring">
			<message>Description cannot be blank</message>
		</field-validator>
	</field>
	<field name="bookAmount">
		<field-validator type="required">
			<message>Book Amount cannot be blank</message>
		</field-validator>
	</field>
	<field name="bookSales">
		<field-validator type="required">
			<message>Sales cannot be blank</message>
		</field-validator>
	</field>
</validators>